<% if object.errors.any? %>
  <div class="row">
    <div class="alert alert-danger">
      <h5>Fix the following <%= pluralize(object.errors.count, "error") %>:</h5>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
