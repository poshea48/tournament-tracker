<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <% if @in_playoffs %>
    <h3 class="modal-title" id="myModalLabel"><%= @court == 100 ? 'Championship' : 'Consolation'  %> Court</h3>
  <% else %>
    <h3 class="modal-title" id="myModalLabel">Leader Board: Court <%= @court  %></h3>
  <% end %>
</div>

<div class="modal-body">
  <table class="table row">
    <thead>
      <tr>
        <th scope="col">Place</th>
        <th scope="col">Player</th>
        <th scope="col">Record</th>
        <th scope="col">Differential</th>
      </tr>
    </thead>
    <tbody>
    <% @teams.each_with_index do |team, i| %>
      <tr>
        <td><%=(i + 1).ordinalize %></td>
        <td><%= team.team_name %></td>
        <td><%= team.pool_record %></td>
        <% if @in_playoffs %>
          <td> <%= team.playoffs == '0' ? '0' : sprintf("%+d", team.playoffs) %></td>
        <% else %>
          <td><%= team.pool_diff == 0 ? '0' : sprintf("%+d", team.pool_diff) %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

