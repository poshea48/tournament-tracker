  <div class="form_container">
    <%= form_for @tournament, html: {class: "form_layout", role: "form"} do |f| %>
      <%= render 'shared/errors', object: @tournament %>
      <div class=" form_table">
        <div class="form_label">
          <%= f.label :name %>
        </div>
        <div class="form_input">
          <%= f.text_field :name, class: "", placeholder: "Name of Tournament", autofocus: true %>
        </div>
      </div>
      <div class="form_table">
        <div class="form_label">
          <%= f.label :date_played %>
        </div>
        <div class="form_input">
          <%= f.text_field :date_played, class: '', placeholder: "Date of Tournament" %>
        </div>
      </div>
      <div class="form_table">
        <div class="button">
          <%= f.submit "Create Tournament", class: "btn btn-primary btn-lg pull-left" %>
        </div>
        <%= link_to "Cancel", root_path %>
      </div>
    <% end %>
  </div>
