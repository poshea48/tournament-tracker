<div class="row">
  <div class="col-md-12">
    <%= form_for @tournament, html: {class: "form-horizontal", role: "form"} do |f| %>
      <%= render 'shared/errors', object: @tournament %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of Tournament", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :date_played %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :date_played, class: 'form-control', placeholder: "Date of Tournament" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-8">
          <%= f.submit "Create Tournament", class: "btn btn-primary btn-lg pull-left" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
