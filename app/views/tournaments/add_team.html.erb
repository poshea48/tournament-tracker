<h2 class="text-center">Add Player to Tournament</h2>
<div class="signup_form ml-auto mr-auto">
  <%= render 'shared/errors', object: @user %>
  <% if @tournament.tournament_type == 'kob' || @tournament.tournament_type == 'kob/team' %>
    <% if @user.admin %>
      <%= render 'admin_player_form' %>
    <% else %>
      <%= render 'add_player_form' %>
    <% end %>
  <% else %>
    <%= render 'add_team_form' %>
  <% end %>
</div>
