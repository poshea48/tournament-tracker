<h2 class="text-center">Register</h2>
<div>

  <div class="form_container auth">
    <%= form_for(@new_user, url: signup_path, html: {method: 'post'}) do |f| %>
      <%= render 'shared/errors', object: @new_user %>

      <div class="form-group row">
        <%= f.label :first_name, value: "First name:", class: 'col-3 col-form-label'  %>
        <div class="col-9 d-flex flex-column">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, value: "Last name:", class: 'col-3 col-form-label'  %>
        <div class="col-9">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, value: "Email:", class: 'col-3 col-form-label'  %>
        <div class="col-9">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, value: "Password:", class: 'col-3 col-form-label'  %>
        <div class="col-9">
          <%= f.text_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, value: "Confirm Password:", class: 'col-3 col-form-label'  %>
        <div class="col-9">
          <%= f.text_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="">
          <%= f.submit "Register", class: "btn btn-primary btn-block" %>
        </div>
        <div class="mt-2">
          <%= link_to "Cancel", root_path, class: "btn btn-danger btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
