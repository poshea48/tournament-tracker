<h2 class="text-center">Change Password</h2>
<div>
  <div class="form_container auth">
    <%= form_for(@user, url: edit_password_path(@user), html: {method: 'patch'}) do |f| %>
      <%= render 'shared/errors', object: @user %>

      <div class="form-group row">
        <%= f.label :password, value: "New Password:", class: 'col-3 col-form-label'  %>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, value: "Confirm New Password:", class: 'col-3 col-form-label'  %>
        <div class="col-9">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="">
          <%= f.submit "Change Password", class: "btn btn-primary btn-block" %>
        </div>
        <div class="mt-2">
          <%= link_to "Cancel", player_path(@user), class: "btn btn-danger btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
