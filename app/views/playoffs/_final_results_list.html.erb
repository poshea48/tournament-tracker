<div class="modal-header flex-row">
  <button type="button" class="close mr-2 ml-0 p-1" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 class="modal-title text-center ml-4" id="myModalLabel">Final Results</h3>
</div>

<div class="modal-body pt-0">
  <table class="table">
    <thead>
      <tr>
        <th class="place" scope="col">Place</th>
        <th class="player" scope="col">Player</th>
        <th class="points" scope="col">Points Earned</th>
      </tr>
    </thead>
    <tbody>
    <% @winners.each_with_index do |team, i| %>
      <tr>
        <td class="place"><%=(i + 1).ordinalize %></td>
        <td class="player"><%= team.team_name %></td>
        <td class="points"><%= @points[i] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
