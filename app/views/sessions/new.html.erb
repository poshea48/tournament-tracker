<h2 class="text-center">Log in</h2>
<div>
  <div class="form_container">
    <%= form_for(:session, url: login_path, html: {method: 'post', role: 'form'}) do |f| %>
      <%= render 'shared/errors', object: @user %>
      <div class="form-group row">
        <%= f.label :email, value: "Email:" , class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.email_field :email, class: "form-control", placeholder: "Email"  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, value: "Password:" , class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control", placeholder: "Password"  %>
        </div>
      </div>
      <div class="form-group">
        <div class="">
          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        </div>
        <div class="mt-2">
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
