<% courts.keys.each do |court| %>
  <% if court == 100 %>
    <h3>Championship Court</h3>
  <% elsif court > 100 %>
    <h3>Consolation Court</h3>
  <% else %>
    <h3>Court <%= court %></h3>
  <% end %>
  <%= link_to "Leader Board", leaderboard_path(@tournament, court_id: court), format: "js", remote: true %>
  <table class="pool table">
    <thead>
      <tr class="row">
        <th scope="col">Games</th>
        <th scope="col">Score</th>
        <th scope="col">Winner(Diff)</th>
        <th scope="col">Loser(Diff)</th>
      </tr>
    </thead>
    <tbody>
      <% courts[court].each do |game| %>
        <tr id="pool_<%= game["id"] %>" data-pool_id="<%= game["id"] %>" class="row">
          <td>
            <%= create_game_title_from_team_ids(game["team_ids"]) %>
            <% if @current_user && @current_user.admin? %>
              <%= link_to "(Edit)", "#" %>
            <% end %>
          </td>
          <% if game["score"].nil? %>
            <td>
              <%= link_to "Results", results_poolplay_path(@tournament,
              pool_id: game["id"]), class: 'btn btn-primary btn-md',
              remote: true, data: { target: '#modal-window', toggle: 'modal'}
              %>
            </td>
            <td></td>
            <td></td>
            <td></td>
          <% else %>
            <%= render 'results_display', game: game %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
