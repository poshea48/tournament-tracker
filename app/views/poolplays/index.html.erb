<% unless @tournament.poolplay_started %>
  <% link_to "Create Pools", new_poolplay_path(@tournament.id) %>
<% else %>

  <% @courts.keys.each do |court| %>
    <h3>Court <%= court %></h3>
    <table class="pool table">
      <thead>
        <tr class="row">
          <th scope="col">Games</th>
          <th scope="col">Score</th>
          <th scope="col">Winner(Diff)</th>
          <th scope="col">Loser(Diff)</th>
        </tr>
      </thead>
      <tbody>
        <% @courts[court].each do |game| %>
          <tr data-id="<%= game["id"] %>" class="row">
            <td><%= convert_team_ids_to_player_first_names_kob(game["team_ids"]) %></td>
            <% if game["score"].nil? %>
              <td><%= link_to "Results", "#", class: 'btn btn-primary btn-md' %></td>
              <td></td>
              <td></td>
              <td></td>
            <% else %>
              <td id="score"><%= game["score"] %></td>
              <td id="winner"><%= game["winner"] %>(+<%= find_differential(game) %>)</td>
              <td id="loser"><%= find_loser(game) %>(-<%= find_differential(game) %>)</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
