<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 class="modal-title" id="myModalLabel">Results For:</h3>
  <h4><%= create_game_title_from_team_ids(@game["team_ids"]) %></h4>
</div>

<div class="modal-body">
  <%= render 'shared/errors', object: @game %>
  <%= form_for @game, url: { action: "update", game_id: @game.id }, remote: true do |f| %>
      <div class="form-group">
          <%= f.label :winner, class: "col-sm-4" %>
          <span><%= f.radio_button :winner, @team_1[1] %> <%= @team_1[0] %>  </span>
          <span><%= f.radio_button :winner, @team_2[1] %> <%= @team_2[0] %>  </span>
      </div>
      <div class="form-group">
          <%= f.label :score, class: "col-sm-4" %>
          <%= f.text_field :score, class: "score_input" %>
      </div>
      <%= f.submit "Save changes", id: "modal_button", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="modal-footer">
</div>
