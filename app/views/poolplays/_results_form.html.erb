<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 class="modal-title" id="myModalLabel">Results For:</h3>
  <h4><%= create_game_title_from_team_ids(@game["team_ids"]) %></h4>
</div>

<div class="modal-body">
  <%= render 'shared/errors', object: @game %>
  <%= form_for @game, url: { action: "update", game_id: @game.id } do |f| %>
      <%= f.label :winner %>
      <%= f.select :winner, team_name_with_team_number_array(@game["team_ids"]) %>
      <%= f.label :score, class: "score_label" %>
      <%= f.text_field :score, class: "score_input" %>
      <%= f.submit "Save changes", id: "modal_button", class: "btn btn-primary" %>
  <% end %>
<div class="modal-footer">
</div>
